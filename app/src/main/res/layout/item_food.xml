<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/food_item_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/food_item_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rutabaga"/>

    <TextView
            android:id="@+id/food_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"/>

    <TextView
            android:id="@+id/food_item_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"/>

    <TextView
            android:id="@+id/food_item_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"/>

    <TextView
            android:id="@+id/food_item_fiber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"/>

    <TextView
            android:id="@+id/food_item_proteins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"/>

    <TextView
            android:id="@+id/food_item_lipids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24"/>
</LinearLayout>